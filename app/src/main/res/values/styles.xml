<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="mAcceptButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/green</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_check_24</item>
    </style>
    <style name="mCancelButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/red</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_close_24</item>
    </style>
    <style name="mBasicButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">#000</item>
    </style>
    <style name="mPrimaryButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
</resources>